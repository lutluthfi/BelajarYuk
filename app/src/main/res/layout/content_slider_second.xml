<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_layout_slider"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_24sdp"
    android:paddingRight="@dimen/_24sdp"
    android:paddingTop="@dimen/_32sdp">

    <ImageView
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_160sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:contentDescription=""
        android:src="@drawable/img_questions"
        tools:ignore="ContentDescription" />

    <TextView
        style="@style/MyHeaderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_16sdp"
        android:text="@string/head_2"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <TextView
        style="@style/MyBodyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/body_2"
        android:textAlignment="center"
        android:textColor="@android:color/white" />
</LinearLayout>