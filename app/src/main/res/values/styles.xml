<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyFinestWebViewTheme" parent="FinestWebViewTheme.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorLightGrey</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="MyThemeFragmentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:background">@drawable/background_dialog_fragment</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Title.Toolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Subtitle.Toolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/colorWhite70</item>
    </style>

    <style name="MyThemeTextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="MyHeaderTextView" parent="MyThemeTextView">
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="MyBodyTextView" parent="MyThemeTextView">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="MyCaptionTextView" parent="MyThemeTextView">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>

    <style name="MyThemeButton" parent="MyThemeTextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="MyThemeEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MyThemeRegisterEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorDeepLightBlue</item>
        <item name="android:textColorHint">@color/colorDarkGrey</item>
        <item name="android:drawablePadding">@dimen/_16sdp</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
